# Appuyer sur entrée pour continuer
entree() {
        read -p "          Appuyez sur Entrée pour continuer..."
        exec "$0"
}

# Retour au menu principal
menu_principal() {
        exec "$0"
}

# Précédent ou Menu principal
precedent_menu() {
        echo
        echo "          Retour arrière [${v}1${reset}]"
        echo "          Retour au menu principal [${r}0${reset}]"
        echo
        read -p "          Faites votre choix : " pm
        echo
                case "$pm" in
                1) ww
                ;;
                0) menu_principal
                ;;
                *) other
                esac
}

